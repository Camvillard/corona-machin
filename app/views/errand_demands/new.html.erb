<div class="container">
  <h1>new errand demand</h1>
  <div class="form-group">
    <label for="#name">nom, prénom, surnom :</label>
    <input
      type="text"
      placeholder="micheline, jean-jacques..."
      id="name"
      name="params[:name]"
    />
  </div>

  <div class="form-group">
    <label for="#name">un moyen de me joindre :</label>
    <input
      type="text"
      placeholder="adresse courriel ou numéro de téléphone"
      id="name"
      name="params[:email]"
    />
  </div>

  <div class="form-group">
    <label for="#list">ma liste de courses :</label>
    <% @list.items.each do |item| %> <%= item.name %> <% end %>
  </div>

  <div class="form-group">
    <label for="#tag">j'en ai besoin :</label>
    <select name="tag" id="tag">
      <%= Tag.all.each do |tag| %>
      <option value="<%= tag.name %>"><%= tag.name %></option>
      <% end %>
    </select>
  </div>

  <div></div>
</div>
<div class="add-item-container">
  <div class="add-item-input-container hide" id="add-item-input">
    <input
      type="text"
      name="params[:item]"
      class="add-item-input"
      placeholder="ajouter un nouvel item"
    />
    <input type="submit" value="ok" />
  </div>
  <div class="add-item-toggle" id="add-item-toggle">
    <p class="symbol">+</p>
    <p class="content" id="add-item-text">nouvel item</p>
  </div>
</div>

<%= javascript_pack_tag 'new-errand' %> <%= javascript_pack_tag "add-input" %>
