<div class="need-card">
  <span class="need-tag"><%= need.tag.name %></span>
  <div class="need-card-title">
    <h4 class="need-author"><%= need.title %></h4>
    <p><%= need.name %></p>
  </div>
  <p class="need-distance"> à 5km de distance</p>
  <% if need.need_type === "ErrandDemand" %>
    <span class="button button-light medium">voir sa liste d'épicerie</span>
  <% end %>
</div>