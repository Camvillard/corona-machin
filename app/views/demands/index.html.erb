<div class="page-wrapper">
  <div class="sort-nav-bar container flexbox-container j-around">
    <%= link_to "tout voir", demands_path(query: "all"), class:"option option-all #{@active == "all" ? 'active' : ''} " %>  
    <%= link_to "course", demands_path(query: "ErrandDemand"), class: "option option-errand-demand #{@active == "ErrandDemand" ? 'active' : ''} " %>
    <%= link_to "aide aux devoirs", demands_path(query: "HomeworkDemand"), class: "option option-homework #{@active == "HomeworkDemand" ? 'active' : ''}" %>
    <%= link_to "social", demands_path(query: "SocialDemand"), class: "option option-social #{@active == "SocialDemand" ? 'active' : ''}" %>
    <%= link_to "other", demands_path(query: "OtherDemand"), class: "option option-other #{@active == "OtherDemand" ? 'active' : ''}" %>
  </div>
  <div class="container demands-cards">
    <% @demands.each do |demand| %>
      <%= link_to demand_path(demand)  do %>
        <%= render "shared/card", need: demand %>
      <% end %>
    <% end %>
  </div>
  <div class="show-map-container close">
    <p class="show-map-title" id="map-toggle">afficher sur la carte</p>
    <div class="map-container">
      <img src="https://source.unsplash.com/random" alt="" />
    </div>
  </div>
  </div>
<%= javascript_pack_tag "map" %> 
<%#= javascript_pack_tag "sort-demands" %>